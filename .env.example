# .env.example - Environment configuration for Galway Catalog System

# =============================================
# DATABASE CONFIGURATION
# =============================================
DATABASE_URL="postgresql://username:password@localhost:5432/galway_db"

# =============================================
# JWT AUTHENTICATION
# =============================================
JWT_SECRET="your-super-secure-jwt-secret-key-here-change-this-in-production"
JWT_EXPIRES_IN="7d"

# =============================================
# STRIPE PAYMENT PROCESSING
# =============================================
# Get these from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY="sk_test_..." # Use sk_live_ for production
STRIPE_PUBLISHABLE_KEY="pk_test_..." # Use pk_live_ for production
STRIPE_WEBHOOK_SECRET="whsec_..." # For webhook verification

# =============================================
# SERVER CONFIGURATION
# =============================================
PORT=5000
NODE_ENV="development" # Change to "production" for live deployment
FRONTEND_URL="http://localhost:3000" # Your Next.js frontend URL

# =============================================
# EMAIL CONFIGURATION (Optional)
# =============================================
# For order confirmations and notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@galwayresearch.institute"

# =============================================
# CATALOG SYSTEM CONFIGURATION
# =============================================
# Marketplace settings
DEFAULT_COMMISSION_PERCENTAGE=5.0
MIN_LISTING_PRICE_CENTS=100    # $1.00
MAX_LISTING_PRICE_CENTS=50000  # $500.00
FREE_SHIPPING_THRESHOLD_CENTS=5000 # $50.00

# Seed pricing (in cents)
BASIC_SEED_PRICE_CENTS=250     # $2.50
PREMIUM_SEED_PRICE_CENTS=250   # $2.50
SEASONAL_SEED_PRICE_CENTS=1000 # $10.00

# Generation boost settings
DEFAULT_BOOST_DURATION_HOURS=24
MAX_BOOSTS_PER_USER=3

# =============================================
# FILE UPLOAD CONFIGURATION
# =============================================
# For product images and user avatars
UPLOAD_MAX_SIZE_MB=10
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,gif,webp"
UPLOAD_DESTINATION="./uploads"

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================
# ADMIN CONFIGURATION
# =============================================
# Default admin user (created on first startup)
ADMIN_USERNAME="admin"
ADMIN_EMAIL="admin@galwayresearch.institute"
ADMIN_PASSWORD="change-this-secure-password"

# =============================================
# LOGGING & MONITORING
# =============================================
LOG_LEVEL="info" # error, warn, info, debug
ENABLE_REQUEST_LOGGING=true

# =============================================
# SECURITY SETTINGS
# =============================================
# Session security
SESSION_SECRET="another-super-secure-session-secret"
COOKIE_SECURE=false # Set to true in production with HTTPS
COOKIE_SAME_SITE="lax"

# CORS settings
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS=true

# =============================================
# EXTERNAL SERVICES (Optional)
# =============================================
# For analytics and monitoring
ANALYTICS_API_KEY=""
SENTRY_DSN=""

# For shipping calculations
SHIPPO_API_KEY=""
SHIPPING_PROVIDER="standard" # standard, shippo, fedex, ups

# =============================================
# FEATURE FLAGS
# =============================================
ENABLE_MARKETPLACE=true
ENABLE_PHYSICAL_ITEMS=true
ENABLE_GENERATION_BOOSTS=true
ENABLE_ADMIN_PANEL=true
ENABLE_EMAIL_NOTIFICATIONS=true

# =============================================
# DEVELOPMENT SETTINGS
# =============================================
# Only used in development
DEV_SEED_DATABASE=false
DEV_RESET_PAYMENTS=false
DEV_MOCK_STRIPE=false